pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/slysiele/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'npm test'
                    } catch (Exception e) {
                        emailext subject: "Jenkins Build Failed: Tests Failed",
                                 body: "The tests failed in the pipeline. Please check Jenkins logs for more details.",
                                 to: 'silvestor.sielei@student.moringaschool.com'
                        error("Tests failed!")
                    }
                }
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js &'
                echo 'Application is now running...'
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
        }
        failure {
            echo 'Deployment Failed!'
        }
    }
}
