pipeline {
    agent any

    environment {
        NODEJS_HOME = tool name: 'NodeJS', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        SLACK_WEBHOOK = 'https://hooks.slack.com/services/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'
        RENDER_URL = 'https://gallery-1-eecc.onrender.com'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/slysiele/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    try {
                        sh 'npm test'
                    } catch (Exception e) {
                        emailext(
                            subject: "Jenkins Build Failed: Tests Failed",
                            body: "The tests failed in the pipeline. Please check Jenkins logs for more details.",
                            to: 'silvestor.sielei@student.moringaschool.com'
                        )
                        error("Tests failed!")
                    }
                }
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js &'
                echo 'Application is now running...'
            }
        }

        stage('Send Slack Notification') {  
            steps {
                script {
                    def slackMessage = """
                        üöÄ *Deployment Successful!* 
                        *Build ID:* ${env.BUILD_ID} 
                        *Live URL:* ${env.RENDER_URL}
                    """
                    sh """
                        curl -X POST -H 'Content-type: application/json' \
                        --data '{\"text\": \"${slackMessage}\"}' ${env.SLACK_WEBHOOK}
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!'
            sh """
                curl -X POST -H 'Content-type: application/json' \
                --data '{\"text\": \"‚úÖ Jenkins Deployment Successful: ${RENDER_URL}\"}' ${SLACK_WEBHOOK}
            """
        }
        failure {
            echo 'Deployment Failed!'
            sh """
                curl -X POST -H 'Content-type: application/json' \
                --data '{\"text\": \"‚ùå Jenkins Deployment Failed! Check the logs.\"}' ${SLACK_WEBHOOK}
            """
        }
    }
}
