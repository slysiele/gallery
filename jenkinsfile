pipeline {
    agent any
     tools{
        nodejs "node"
    }
    environment {
        RENDER_URL = 'https://gallery-lnnq.onrender.com'  
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/slysiele/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

          stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js'
            }
        }
                stage('Notify Slack') {
            steps {
                slackSend(
                    channel: '#all-silvestorip1',
                    color: 'good',
                    message: "*Silvestor_IP1 Deployed Successfully!* \n *URL:* ${RENDER_URL}"
                )
            }
        }
    }
}
