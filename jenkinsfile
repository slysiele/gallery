pipeline {
    agent any
     tools{
        nodejs "node"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/slysiele/gallery.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

          stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy to Render') {
            steps {
                sh 'node server.js'
            }
        }
        stage('Slack') {
            steps {
                slackSend message: 'Silvestor_IP1 deployed  SUCCESS'
            }
        }
    }
}
